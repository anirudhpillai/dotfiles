# bindsym $mod+d exec i3-dmenu-desktop --dmenu='rofi -dmenu'

# scrot for screenshots
bindsym $mod+p exec scrot ~/Pictures/Screenshots/%b%d-%H%M%S.png

# nautilus
bindsym $mod+n exec nautilus --no-desktop

# compton for transparency
exec compton

# albert is a great dmenu alternative
exec albert

# feh for setting background
exec_always feh --bg-scale /home/anirudh/Pictures/stour_space.jpg

for_window [class="^.*"] border pixel 1

# brightness control
bindsym $mod+b exec xbacklight -inc 20
bindsym $mod+m exec xbacklight -dec 20

# volume controls
bindsym $mod+i exec amixer -D pulse sset Master 5%+
bindsym $mod+o exec amixer -D pulse sset Master 5%-

# command to put the laptop to sleep
bindsym $mod+shift+p exec i3lock && sudo pm-suspend
